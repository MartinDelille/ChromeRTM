{
  "manifest_version": 2,

  "name": "Chrome links to RTM",
  "description": "A Google Chrome extension for adding quickly Remember The Milk tasks from the current URL.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_popup": "popup.html"
  },
  "icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

  "permissions": [
    "https://www.rememberthemilk.com/"
  ]
}
